            android:background="#F7FAF7"
            android:drawableTop="@drawable/compass"
            android:paddingTop="20dp"
            android:text="báo cáo"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1400px"
        android:layout_height="100dp"
