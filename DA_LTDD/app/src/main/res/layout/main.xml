            android:text="Kết quả học tập"></Button>

        <Button
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:background="#F7FAF7"
            android:drawableTop="@drawable/scope"
            android:paddingTop="20dp"
            android:text="Thông báo"></Button>

        <Button
            android:paddingTop="20dp"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:background="#F7FAF7"
            android:drawableTop="@drawable/diploma"
            android:text="Thông tin SV"></Button>
