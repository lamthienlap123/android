<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#2196F3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_ttsv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameuser"
                android:text="Đỗ Hoàng Thiện"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mssv"
                android:text="MSSV: 2001160347"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/malop"
                android:text="Mã Lớp: 07DHTH1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:gravity="center"
        >
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/bell"
                android:paddingTop="20dp"
                android:text="Thông báo"></Button>
            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/bell"
                android:paddingTop="20dp"
                android:text="Thông báo"></Button>
            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/compass"
                android:paddingTop="20dp"
                android:text="báo cáo"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/atom"
                android:paddingTop="20dp"
                android:text="Kết quả học tập"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/pen"
                android:paddingTop="20dp"
                android:text="Thông báo"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/feather"
                android:paddingTop="20dp"
                android:text="Thông tin "></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/atom"
                android:paddingTop="20dp"
                android:text="Kết quả học tập"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/pen"
                android:paddingTop="20dp"
                android:text="Thông báo"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/feather"
                android:paddingTop="20dp"
                android:text="Thông tin"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>