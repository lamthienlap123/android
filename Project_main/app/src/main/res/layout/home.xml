<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#2196F3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_ttsv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameuser"
                android:text="Đỗ Hoàng Thiện"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mssv"
                android:text="MSSV: 2001160347"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/malop"
                android:text="Mã Lớp: 07DHTH1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:gravity="center"
        >
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/idcard"
                android:paddingTop="20dp"
                android:text="Thông tin sinh viên"
                android:textSize="12sp"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/notification"
                android:paddingTop="20dp"
                android:text="Thông báo"
                android:textSize="12sp"></Button>
            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/calendar"
                android:paddingTop="20dp"
                android:text="Lịch học"
                android:textSize="12sp"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/analytics"
                android:paddingTop="20dp"
                android:text="Kết quả học tập"
                android:textSize="12sp"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/table"
                android:paddingTop="20dp"
                android:text="Chương trình khung"
                android:textSize="12sp"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/padlock"
                android:paddingTop="20dp"
                android:text="Đổi mật khẩu"
                android:textSize="12sp"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/exit"
                android:paddingTop="20dp"
                android:text="Đăng xuất"
                android:textSize="12sp"></Button>

            <Button
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/letter"
                android:paddingTop="20dp"
                android:text="Góp ý - Phản hồi"
                android:textSize="12sp"
                android:layout_weight="0dp"></Button>
        </TableRow>

    </TableLayout>
</LinearLayout>