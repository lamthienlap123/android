<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#2196F3"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/icon_ttsv"
            android:src="@drawable/user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameuser"
                android:text="thien"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="MSSV:"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="55dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mssv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2001160174"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Mã lớp: "
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/malop"
                    android:text="07DHTH1"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:gravity="center"
        >
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:id="@+id/btn_TTSV"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/idcard"
                android:paddingTop="20dp"
                android:text="Thông tin sinh viên"
                android:textSize="12sp"></Button>
            <Button
                android:id="@+id/btn_TB"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/bell"
                android:paddingTop="20dp"
                android:text="Thông báo"
                android:textSize="12sp"></Button>
            <Button
                android:id="@+id/btn_LH"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/calendar"
                android:paddingTop="20dp"
                android:text="lịch học"
                android:textSize="12sp"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:id="@+id/btn_KQHT"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/analytics"
                android:paddingTop="20dp"
                android:text="Kết quả học tập"
                android:textSize="12sp"></Button>

            <Button
                android:id="@+id/btn_CTK"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/table"
                android:paddingTop="20dp"
                android:text="chương trình khung"
                android:textSize="12sp"></Button>

            <Button
                android:id="@+id/btn_DMK"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/padlock"
                android:paddingTop="20dp"
                android:text="đổi mật khẩu"
                android:textSize="12sp"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="300px">

            <Button
                android:id="@+id/btn_CN"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/letter"
                android:paddingTop="20dp"
                android:text="công nợ"
                android:textSize="12sp"></Button>
            <Button
                android:id="@+id/btn_DX"
                android:layout_width="360px"
                android:layout_height="300px"
                android:background="#F7FAF7"
                android:drawableTop="@drawable/exit"
                android:paddingTop="20dp"
                android:text="Đăng xuất"
                android:textSize="12sp"></Button>

        </TableRow>
    </TableLayout>
</LinearLayout>